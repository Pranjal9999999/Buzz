<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.buzz">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_teams"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Frontend">
        <activity android:name="com.example.buzz.activities.LoginActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"></activity>
        <activity android:name="com.example.buzz.activities.SignupActivity"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity android:name="com.example.buzz.activities.HomeActivity" />
        <activity android:name="com.example.buzz.activities.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>